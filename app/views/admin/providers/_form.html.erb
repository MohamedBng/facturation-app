<%= form_for([:admin, @provider], local: true, html: { id: "form-provider", class: "needs-validation", novalidate: "" }) do |form| %>
  <style>
    .fieldset-style {
      border: 1px solid #ccc;
      border-radius: 8px;
      padding: 20px;
      margin-top: 20px;
    }
    .legend-style {
      width: auto;
      color: #333;
      font-weight: bold;
    }
    .form-group {
      margin-bottom: 1rem;
    }
    .form-control {
      border-radius: 4px;
      border: 1px solid #ced4da;
    }
    .form-label {
      margin-bottom: 0.5rem;
      color: #666;
    }
    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
    }
  </style>

  <div class="form-group mt-3">
    <div class="col-sm-6">
      <%= form.label :name, "Nom", class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-3">
    <div class="col-sm-6">
      <%= form.label :address, "Adresse", class: "form-label" %>
      <%= form.text_field :address, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-3">
    <div class="col-sm-6">
      <%= form.label :city, "Ville", class: "form-label" %>
      <%= form.text_field :city, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-3">
    <div class="col-sm-6">
      <%= form.label :postal_code, "Code Postal", class: "form-label" %>
      <%= form.text_field :postal_code, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-3">
    <div class="col-sm-6">
      <%= form.label :num_siret, "Numéro SIRET", class: "form-label" %>
      <%= form.text_field :num_siret, class: "form-control" %>
    </div>
  </div>

  <fieldset class="fieldset-style">
    <legend class="legend-style">Devis et Facturation</legend>
    <div class="col-sm-6">
      <%= form.label :starting_quotation_number, "Numéro de Devis Initial", class: "form-label" %>
      <%= form.number_field :starting_quotation_number, class: "form-control" %>
    </div>

    <div class="form-group mt-3">
      <div class="col-sm-6">
        <%= form.label :starting_invoice_number, "Numéro de Facture Initial", class: "form-label" %>
        <%= form.number_field :starting_invoice_number, class: "form-control" %>
      </div>
    </div>
  </fieldset>

  <fieldset class="fieldset-style">
    <legend class="legend-style">Identité Visuelle</legend>
    <div class="form-group">
      <div class="col-sm-6">
        <%= form.label :logo, "Logo", class: "form-label" %>
        <%= form.file_field :logo, direct_upload: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group mt-3">
      <div class="col-sm-6">
        <%= form.label :primary_color, "Couleur Principale", class: "form-label" %>
        <%= form.color_field :primary_color, class: "form-control" %>
      </div>
    </div>

    <div class="form-group mt-3">
      <div class="col-sm-6">
        <%= form.label :secondary_color, "Couleur Secondaire", class: "form-label" %>
        <%= form.color_field :secondary_color, class: "form-control" %>
      </div>
    </div>

    <div class="form-group mt-3">
      <div class="col-sm-6">
        <%= form.label :background_color, "Couleur de Fond", class: "form-label" %>
        <%= form.color_field :background_color, class: "form-control" %>
      </div>
    </div>

    <div class="form-group mt-3">
      <div class="col-sm-6">
        <%= form.label :text_color, "Couleur du Texte", class: "form-label" %>
        <%= form.color_field :text_color, class: "form-control" %>
      </div>
    </div>
  </fieldset>

  <div class="form-group mt-3">
    <div class="col-sm-6">
      <%= form.submit "Envoyer", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
