<div class="container mt-5">
  <h2 class="mb-4">Détails du Provider</h2>
  <ul class="list-group">
    <li class="list-group-item"><strong>Nom complet :</strong> <%= @provider.name %></li>
    <li class="list-group-item"><strong>Adresse :</strong> <%= @provider.address %></li>
    <li class="list-group-item"><strong>Ville :</strong> <%= @provider.city %></li>
    <li class="list-group-item"><strong>Code Postal :</strong> <%= @provider.postal_code %></li>
    <li class="list-group-item"><strong>Numéro SIRET :</strong> <%= @provider.num_siret %></li>
  </ul>
  <div class="mt-3">
    <%= link_to "Éditer ce prestataire", edit_admin_provider_path(@provider), class: "btn btn-primary mr-2" %>
    <%= link_to "Retour aux prestataires", admin_providers_path, class: "btn btn-secondary" %>
    <%= link_to "Supprimer", admin_provider_path(@provider), method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer ce provider ?' }, class: "btn btn-sm btn-danger" %>
  </div>
</div>
