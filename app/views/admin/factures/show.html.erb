<div class="container mt-5">
  <h2 class="mb-4">Détails du Factures</h2>
  <ul class="list-group">
    <li class="list-group-item"><strong>Client :</strong> <%= @facture.client.nom_complet %></li>
    <li class="list-group-item"><strong>Date :</strong> <%= @facture.created_at.to_date %></li>
    <li class="list-group-item"><strong>Statut :</strong> <%= @facture.status.titleize %></li>
    <li class="list-group-item"><strong>Auto-liquidation TVA:</strong> <%= @facture.liquidation_tva ? "Oui" : "Non" %></li>
    <li class="list-group-item"><strong>TVA :</strong> <%= @facture.tva %> %</li>
    <li class="list-group-item"><strong>Total :</strong> <%=  Money.new(@facture.total_ht, "EUR").format %></li>
    <li class="list-group-item"><strong>Montant TTC :</strong> <%= Money.new(@facture.total_ttc, "EUR").format %></li>
  </ul>
  <div class="mt-3">
    <%= link_to "Éditer ce facture", edit_admin_facture_path(@facture), class: "btn btn-primary mr-2" %>
    <%= link_to "Retour aux factures", admin_factures_path, class: "btn btn-secondary" %>
    <%= link_to 'Exporter en PDF', show_pdf_admin_facture_path(@facture, format: :pdf), class: "btn btn-info", target: "_blank" %>
    <%= link_to "Supprimer", admin_facture_path(@facture), method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer ce client ?' }, class: "btn btn-sm btn-danger" %>
  </div>
</div>
