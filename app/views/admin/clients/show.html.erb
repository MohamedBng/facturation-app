<div class="container mt-5">
  <h2 class="mb-4">Détails du Client</h2>
  <ul class="list-group">
    <li class="list-group-item"><strong>Nom complet :</strong> <%= @client.nom_complet %></li>
    <li class="list-group-item"><strong>Adresse :</strong> <%= @client.adresse %></li>
    <li class="list-group-item"><strong>Ville :</strong> <%= @client.ville %></li>
    <li class="list-group-item"><strong>Code Postal :</strong> <%= @client.code_postal %></li>
    <li class="list-group-item"><strong>Numéro SIRET :</strong> <%= @client.num_siret %></li>
  </ul>
  <div class="mt-3">
    <%= link_to "Éditer ce client", edit_admin_client_path(@client), class: "btn btn-primary mr-2" %>
    <%= link_to "Retour aux clients", admin_clients_path, class: "btn btn-secondary" %>
    <%= link_to "Supprimer", admin_client_path(@client), method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer ce client ?' }, class: "btn btn-sm btn-danger" %>
  </div>
</div>
