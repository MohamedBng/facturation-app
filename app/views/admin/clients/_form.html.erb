<%= form_for([:admin, @client], local: true, html: { id: "form-client", class: "needs-validation", novalidate: "" }) do |form| %>
  <div class="form-group mt-3">
    <div class="col-sm-6">
      <%= form.label :nom_complet, "Nom Complet", class: "form-label" %>
      <%= form.text_field :nom_complet, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-3">
    <div class="col-sm-6">
      <%= form.label :email, "E-mail", class: "form-label" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-3">
    <div class="col-sm-6">
      <%= form.label :phone_number, "Numéro de Téléphone", class: "form-label" %>
      <%= form.text_field :phone_number, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-3">
    <div class="col-sm-6">
      <%= form.label :adresse, "Adresse", class: "form-label" %>
      <%= form.text_field :adresse, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-3">
    <div class="col-sm-6">
      <%= form.label :ville, "Ville", class: "form-label" %>
      <%= form.text_field :ville, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-3">
    <div class="col-sm-6">
      <%= form.label :code_postal, "Code Postal", class: "form-label" %>
      <%= form.text_field :code_postal, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-3">
    <div class="col-sm-6">
      <%= form.label :num_siret, "Numéro SIRET", class: "form-label" %>
      <%= form.text_field :num_siret, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-3">
    <div class="col-sm-6">
      <%= form.submit "Envoyer", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
