<%= form_for([:admin, @client], local: true, html: { id: "form-client", class: "needs-validation", novalidate: "" }) do |form| %>
  <div class="form-group mt-3">
    <div class="col-sm-6">
      <%= form.label :nom_complet, class: "form-label" %>
      <%= form.text_field :nom_complet, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-3">
    <div class="col-sm-6">
      <%= form.label :adresse, class: "form-label" %>
      <%= form.text_field :adresse, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-3">
    <div class="col-sm-6">
      <%= form.label :ville, class: "form-label" %>
      <%= form.text_field :ville, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-3">
    <div class="col-sm-6">
      <%= form.label :code_postal, class: "form-label" %>
      <%= form.text_field :code_postal, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-3">
    <div class="col-sm-6">
      <%= form.label :num_siret, class: "form-label" %>
      <%= form.text_field :num_siret, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-3">
    <div class="col-sm-6">
      <%= form.submit "Envoyer", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
