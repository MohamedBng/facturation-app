<div class="nested-fields item-field" style="border: 1px solid #ccc; padding: 20px; margin-bottom: 20px; border-radius: 5px; background-color: #f8f9fa;">
  <div class="form-group">
    <%= f.label :detail, class: "form-label" %>:
    <%= f.rich_text_area :detail, class: "form-control", rows: 3 %>
  </div>

  <div class="form-group">
    <%= f.label :quantite, class: "form-label" %>:
    <%= f.number_field :quantite, in: 1..1000, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :unite, class: "form-label" %>:
    <%= f.text_field :unite, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price, "Prix unitaire (HT)", class: "form-label" %>:
    <%= f.text_field :price, step: 0.01, class: "form-control" %>
  </div>

  <div data-controller="toggle-field" data-vat-application-target="exemptTvaBlock">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group mt-3">
          <%= f.label :exempt_tva, "ExonÃ©ration de TVA", class: "form-label" %>
          <%= f.check_box :exempt_tva, class: "form-check-input", data: { toggle_field_target: "checkbox", action: "change->toggle-field#toggleTVA" } %>
        </div>
        <div class="form-group mt-3" data-toggle-field-target="tva">
          <%= f.input :tva, label: "TVA (%)", input_html: { class: "form-control", min: 0, step: "any" } %>
        </div>
      </div>
    </div>
  </div>

  <%= link_to_remove_association "Supprimer l'item", f, class: "btn btn-danger btn-sm mt-3" %>
</div>
