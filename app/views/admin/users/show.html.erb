<div class="container mt-5">
  <h1 class="mb-4">Détails de l'Utilisateur</h1>
  <ul class="list-group">
    <li class="list-group-item"><strong><%= t('admin.users.form.email') %> :</strong> <%= @user.email %></li>
    <li class="list-group-item"><strong><%= t('admin.users.form.role') %> :</strong> <%= @user.role %></li>
    <li class="list-group-item"><strong><%= t('admin.users.form.firstname') %> :</strong> <%= @user.firstname %></li>
    <li class="list-group-item"><strong><%= t('admin.users.form.lastname') %> :</strong> <%= @user.lastname %></li>
  </ul>
  <div class="mt-3">
    <%= link_to 'Éditer', edit_admin_user_path(@user), class: "btn btn-primary mr-2" %>
    <%= link_to 'Retour à la liste', admin_users_path, class: "btn btn-secondary" %>
  </div>
</div>
