<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="text-center mb-4">
        <%= image_tag('logo.png', alt: 'App logo', height: '100') %>
      </div>

      <h2 class="text-center mb-4">Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'needs-validation', novalidate: "" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :email, class: 'form-label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="actions text-center mt-3">
          <%= f.submit "Send me reset password instructions", class: 'btn btn-primary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links", class: 'text-center' %>
    </div>
  </div>
</div>
